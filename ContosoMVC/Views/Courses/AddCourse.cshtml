@using Contoso.Utitlity
@model Contoso.Model.Models.Courses

@{
    ViewBag.Title = "Add Course";
    List<SelectListItem> list=new List<SelectListItem>();
    foreach (var department in Utility.GetAllDepartments())
    {
        list.Add(new SelectListItem() {Text = department.ID.ToString(),Value = department.ID.ToString()});
    }
}

<h2>Add Course</h2>

